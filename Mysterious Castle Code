print("Welcome to the mysterious castle \nwhere you have to find the key")

for i in range(3):
    c = float(input("Enter the secret code: "))

    if c % 3 == 0 and c % 5 == 0:
        print("Clue found!")
        break
    elif c % 3 == 0 or c % 5 == 0:
        print("Clue found!")
        break
    else:
        print("Wrong code, try again.")
        continue
else:
    print("All chances used. The castle is now locked.")
